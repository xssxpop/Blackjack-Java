<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B7A39"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/DrawButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="32dp"
        android:onClick="DrawButton"
        android:text="Draw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/StickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="32dp"
        android:onClick="StickButton"
        android:text="Stick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="RestartButton"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cardViewDeck"
        android:layout_width="69dp"
        android:layout_height="110dp"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/blue_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="255dp"
        android:layout_height="81dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="BLACKJACK"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        tools:text="BLACKJACK" />

    <TextView
        android:id="@+id/OutcomeText"
        android:layout_width="167dp"
        android:layout_height="79dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/CpuAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <TextView
        android:id="@+id/PlayerAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.621" />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="110dp"
        android:layout_marginTop="152dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cardViewSlot6"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot7"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot8"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot9"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot10"
            android:layout_width="69dp"
            android:layout_height="110dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="110dp"
        android:layout_marginBottom="132dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/cardViewSlot1"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot2"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot3"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot4"
            android:layout_width="69dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/cardViewSlot5"
            android:layout_width="69dp"
            android:layout_height="110dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>